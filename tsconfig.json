{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "noUncheckedIndexedAccess": true,
      "lib": ["ES2022", "DOM"],
      "module": "ES2022",
      "target": "ES2022",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Bundler",
      "skipLibCheck": true,
      "baseUrl": ".",
      "noEmit": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "**/*.ts"
    ],
    "ts-node": {
      // https://typestrong.org/ts-node/docs/configuration
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
      "files": true
    }
}